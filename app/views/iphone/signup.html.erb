<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
	<head>
		<title>DMS Signup</title>
		<!--[if !IE]-->
		<link href="/stylesheets/iphone.css" type="text/css" rel="stylesheet" />
		<!--[endif]-->
		<meta name="viewport" content="width=320; initial-scale=1.0; maximum-scale=1.0; user-scalable=0;"/>
	</head>
	<body>	
		<div id="header">
			<h1>
				Daily Mugshot
			</h1>
		</div>
		<div id="content_wrap">
			<div id="content">
				<h2>Account Setup</h2>
				<% form_for :authuser, :html => {:id => "signup_form"}, :url => {:controller => "iphone", :action => "signup"} do |f| -%>
					<%= error_messages_for 'authuser' %>
					<label for="login">Login:</label>
					<%= f.text_field :login %>
					<label for="email">Your email:</label>
					<%= f.text_field :email, :value => @i_email %>
					<label for="email">Gender:</label>
					Guy<%= f.radio_button :gender, "m" %>
					Girl<%= f.radio_button :gender, "f" %>	
					<label for="birthday">Your birthday:</label>
					<%= f.date_select :birthday, :start_year => 100.years.ago.strftime("%Y").to_i %>
					<label for="authuser_password">Password:</label>
					<%= f.password_field :password  %>
					<label for="authuser_password_confirmation">Confirm Pwd:</label>
					<%= f.password_field :password_confirmation %>
					<label for="authuser_time_zone">Time Zone:</label>
					<%= time_zone_select 'authuser', 'time_zone', TZInfo::Timezone.all.sort, :model => TZInfo::Timezone %>
					<label for="tos">I agree to the <%= link_to 'Terms of Service','/tos.html' %></label>
					<%= f.check_box :tos %>
					<input type="hidden" name="iphone" value="iphone" />					
					<input type="submit" value="Create Account!" id="reset"/>
				<% end %>
			</div>
		</div>
	</body>
</html>
