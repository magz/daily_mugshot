<%= stylesheet_link_tag "update_account" %>

<h1>Update Account</h1>

      	<fieldset>
            <%= form_for @authuser do |f| -%>
  <% if @errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@errors.count, "error") %> prevented your account from being created:</h2>

      <ul>
      <% @errors.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
							
	            <div class="highlight_box" id="current_password">
	              <div class="highlight_box_wrapper">
	                <div class="highlight_box_content" OnMouseOver="renderTooltip(180,'We need this for your protection');" OnMouseOut="hideTooltip();">
	                  <h3>
	                    Enter your current password
	                    <span class="hint">
	                      All account updates require your current password.
	                    </span>
	                  </h3>
                    <%#= link_to "Forgot?", {:controller => "main", :action => "reminder"}, :class => "forgot_password" %>	
                    <label for="old_password">
	                    Current Password:
	                    <%= f.password_field :old_password  %>
                    </label> 
	                </div>
	              </div>
              </div> 
        
               <div class="highlight_box">
                <div class="highlight_box_wrapper">
									<div class="highlight_box_content">
									  <h3>Change Password?</h3>
									  <label for="password">

						          New Password: 
						          <%= f.password_field :password %>
									  </label>
									  <br />
									  									  </div>
  									<div class="highlight_box_content">
  									<br>
									  <label for="password_confirmation">
						          Confirm New Pwd:
						          <%= f.password_field :password_confirmation %>
									  </label>
									</div>
                </div>
               </div>
                
               <div class="highlight_box">
                   <div class="highlight_box_wrapper">
                       <div class="highlight_box_content" >
                        <h3>Change login?</h3>
                        <label for="login">
                         New Login:
                         <%= f.text_field :login %>
                        </label>	
                       </div>
                   </div>
               </div>
                
                
                <div class="highlight_box">
                    <div class="highlight_box_wrapper">
                        <div class="highlight_box_content" >
                          <h3>Change email?</h3>
                          <label for="email">
                            New Email:
                            <%= f.text_field :email  %>
                          </label>	
                        </div>
                    </div>
                </div>
				<% if (current_authuser.id == 60581 || current_authuser.login == "Trivialelement"|| current_authuser.login == "pabs616") %>
				<div class=" ">
                    <div class="highlight_box_wrapper">
                        <div class="highlight_box_content">
                         <h3>Post to Twitter?</h3>
                         <label for="time_zone">
                           <% if current_authuser.twitter_connect && current_authuser.twitter_connect.active %>
						You are currently posting to Twitter.  If you would like to stop posting your updates to Twitter, please click <%= link_to "HERE", :deactivate_twitter %>.
							<% else %>
							If you would like to authorize Daily Mugshot to post updates to your Twitter feed, please click <%= link_to "HERE", :twitter_signup %>.  You can disable this feature at any time.
							<% end %>
                         </label>	
                         <br>
                        </div>
                    </div>
                </div>
				<% end %>
                <div class="highlight_box">
                    <div class="highlight_box_wrapper">
                        <div class="highlight_box_content">
                         <h3>Change Time Zone?</h3>
                         <label for="time_zone">
                           New Time Zone:
							<%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %>
                         </label>	
                         <br>
                        </div>
                    </div>
                </div>
	             <div class="highlight_box">
                    <div class="highlight_box_wrapper">
                        <div class="highlight_box_content">
                         <h3>Make your account private?</h3>
                         <label for="time_zone">
							Private? <%= f.check_box :prvt %>
                         </label>	
                         <br>
                        </div>
                    </div>
                </div>

      <%#= error_messages_for @authuser %> 
      <button class="button update_button" name="commit" type="submit" value="update">Update</button>
			<%#= link_to "Destroy My Account", destroy_my_account_path, :class => "floatright" %>
		<% end %>
	</fieldset>
