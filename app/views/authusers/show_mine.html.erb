<%#= javascript_include_tag "$('mySequence').addClassName('current');" %>
<%= stylesheet_link_tag "sequence" %>
<h1>My Mugshow</h1>
<div class="flash_container hint">
	Email Reminder: <%#= current_authuser.emailreminder.try(:active) ? "ON" : "OFF" %>
	(<%#= current_authuser.emailreminder.twelve_hour_time %>), 
	Timezone: <%= current_authuser.time_zone %>
</div>
<ul id="sequence_actions">
	<li>
	  <%= link_to "update account", :update_account %>
	</li>
	<li>
    <%= link_to "see your Mugshow!", current_authuser %>
	</li>
	<li>
    <%#= link_to "modify Landmarks", :controller => "authuser", :action => 'landmarks' %>
	</li>
	<li>
		<label for="mugshow_prvt">
		  <strong>Public?</strong>
      <%= check_box 'authuser', 
                    'prvt', 
                    :checked => current_authuser.prvt == 1 ? "unchecked" : "checked",
                    :OnMouseOver => "renderTooltip(90,'Let others see your mugshow?');",   
                    :OnMouseOut => "hideTooltip();" %>
      <span class="hint">Be Brave!</span>
      <span class="updated" id="bravespan"></span>
			<script type="text/javascript">
			// //<![CDATA[
			// new Form.Element.EventObserver('authuser_prvt', function(element, value) {
			// 	new Ajax.Request('<%#= toggle_privacy_path %>', {
			// 		asynchronous:true, 
			// 		evalScripts:true, 
			// 		parameters:{"authuser[toggle_prvt]": true, _method:'put', format:'xml'}
			// 	});
			// });
			// //]]>
			</script>
		</label>
	</li>
</ul>
<div id="div_thumbs">
	<div id="sequence_image_actions" class="highlight_box">
		<div id="sequence_image_actions_wrapper" class="highlight_box_wrapper">
      <div class="highlight_box_content">
				<%= render 'show_mine_mugshots', :mugshots => @mugshots %>
				<span id="visStatus" class="updated"></span>
				<% if @authuser.mugshots.count > @page_size -%>
				<ul id="sequence_date_ranges">
				  <li>
				    <%= link_to "&lt; First", 
				          {:page => (@authuser.mugshots.count / @page_size).ceil}, 
				           :id => "", 
				           :class => "css3button" %>
				  </li>
				  <li>
				    <%= link_to "&lt; Prev", 
				          {:page => @current_page == (@authuser.mugshots.count / @page_size).ceil ? @current_page : @current_page + 1}, 
				           {:id => "", 
				           :class => "css3button"} %>
				  </li>
				  <li>
				    <%= link_to "Next &gt;", 
				      {:page => @current_page == 1 ? 1 : @current_page - 1}, 
		               {:id => "", 
				           :class => "css3button"} %>
				  </li>
				  <li>
				    <%= link_to "Last &gt;", 
		          {:page => 1}, 
				           :id => "", 
				           :class => "css3button" %>
				  </li>
				</ul>
				<% end %>
	    </div>
    </div>
  </div>
</div>
<div id="sequence_details">
  <strong><%= @authuser.mugshots.count %></strong> 
	total pictures.  Began: <strong><%= current_authuser.created_at.strftime("%B %d, %Y")%></strong>  
</div>
<div id="adjust" class="flash_container">
<script type=text/javascript>
</script>
<p>
	<%#= link_to 'Download', download_mugshot_path(@pic.mugshot), :popup => true, :class => 'css3button' %>
</p>
</div>
