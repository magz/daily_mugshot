a, a:link, a:hover {text-decoration:none;}
.user {
	width:175px;
	height:242px;
	background: #eaeaea;
	border:1px solid #cccccc;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
	float:left;
	margin-left: 38px;
	margin-top:20px;
	
}

.username {
	height:24px;
	font: 18px "Trebuchet MS", serif;
	color:white;
	text-align:center;
	padding-top:0px;
	width:100%;
	background: #aec44f; /* Old browsers */
	background: -moz-linear-gradient(top,  #aec44f 0%, #8ba602 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#aec44f), color-stop(100%,#8ba602)); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top,  #aec44f 0%,#8ba602 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top,  #aec44f 0%,#8ba602 100%); /* Opera 11.10+ */
	background: -ms-linear-gradient(top,  #aec44f 0%,#8ba602 100%); /* IE10+ */
	background: linear-gradient(top,  #aec44f 0%,#8ba602 100%); /* W3C */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#aec44f', endColorstr='#8ba602',GradientType=0 ); /* IE6-9 */
	border-bottom:1px solid #cccccc;
}

.userpic {
	width:157px;
	height:158px;
	background:#ffffff;
	border:1px solid #dbdbdb;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
	margin:8px;

}
.userpic img {
	margin:8px;
}

.usershots {
	width:100px;
	height:22px;
	font: 14px "Trebuchet MS", serif;
	text-transform: uppercase;
	text-align:center;
	color:white;
	background: #3eccff; /* Old browsers */
	background: -moz-linear-gradient(top,  #3eccff 0%, #0b7fda 96%, #0171d3 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#3eccff), color-stop(96%,#0b7fda), color-stop(100%,#0171d3)); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top,  #3eccff 0%,#0b7fda 96%,#0171d3 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top,  #3eccff 0%,#0b7fda 96%,#0171d3 100%); /* Opera 11.10+ */
	background: -ms-linear-gradient(top,  #3eccff 0%,#0b7fda 96%,#0171d3 100%); /* IE10+ */
	background: linear-gradient(top,  #3eccff 0%,#0b7fda 96%,#0171d3 100%); /* W3C */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#3eccff', endColorstr='#0171d3',GradientType=0 ); /* IE6-9 */
	margin:0 auto;
	padding-top:6px;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	border-radius: 5px;
	-webkit-box-shadow: 0px 3px 0px 0px rgba(0, 0, 0, 0.1);
	-moz-box-shadow: 0px 3px 0px 0px rgba(0, 0, 0, 0.1);
	box-shadow: 0px 3px 0px 0px rgba(0, 0, 0, 0.1);
}
